<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <include layout="@layout/video_background"></include>
    <ImageView
        android:id="@+id/outline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_outline"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:rotation="180">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tophead"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/zed"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/topbuff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="buff:0"
                        android:textSize="20sp"/>
                </LinearLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="4">
                    <ImageView
                        android:id="@+id/tophp1"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/tophp2"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/tophp3"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/tophp4"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/topmp1"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                    <ImageView
                        android:id="@+id/topmp2"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                    <ImageView
                        android:id="@+id/topmp3"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                    <ImageView
                        android:id="@+id/topmp4"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                </GridLayout>
            </LinearLayout>
            <GridLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_height="wrap_content"
                android:layout_gravity="">
                <ImageButton
                    android:id="@+id/topskill1"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/zedq"
                    style="@style/SkillTheme"/>
                <ImageButton
                    android:id="@+id/topskill2"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/zedw"
                    style="@style/SkillTheme"/>
                <ImageButton
                    android:id="@+id/topskill3"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/zede"
                    style="@style/SkillTheme"/>
                <ImageButton
                    android:id="@+id/topskill4"
                    android:src="@drawable/zedr"
                    style="@style/SkillTheme"/>
            </GridLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">
            <ImageButton
                android:id="@+id/circle"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle5" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/bottomhead"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yasuo"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/bottombuff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="buff:0"
                        android:textSize="20sp"/>
                </LinearLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="4">
                    <ImageView
                        android:id="@+id/bottomhp1"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/bottomhp2"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/bottomhp3"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/bottomhp4"
                        style="@style/FireTheme"
                        android:src="@drawable/hp" />
                    <ImageView
                        android:id="@+id/bottommp1"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                    <ImageView
                        android:id="@+id/bottommp2"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                    <ImageView
                        android:id="@+id/bottommp3"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                    <ImageView
                        android:id="@+id/bottommp4"
                        style="@style/FireTheme"
                        android:src="@drawable/mp" />
                </GridLayout>
            </LinearLayout>
            <GridLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_height="wrap_content"
                android:layout_gravity="">
                <ImageButton
                    android:id="@+id/bottomskill1"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/yasuoq"
                    style="@style/SkillTheme"/>
                <ImageButton
                    android:id="@+id/bottomskill2"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/yasuow"
                    style="@style/SkillTheme"/>
                <ImageButton
                    android:id="@+id/bottomskill3"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/yasuoe"
                    style="@style/SkillTheme"/>
                <ImageButton
                    android:id="@+id/bottomskill4"
                    android:src="@drawable/yasuor"
                    style="@style/SkillTheme"/>
            </GridLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
