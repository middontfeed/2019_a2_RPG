<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/video_background"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="1"
        android:textSize="1dp">
    </TextView>

        <ImageButton
            android:id="@+id/topchoose"
            android:rotation="180"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/zed"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:padding="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/timg"
                android:alpha="0.7"/>
            <Button
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/progress"
                android:layout_marginTop="-70dp"
                android:layout_centerInParent="true"
                android:text="start" />

            <SeekBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:min="2000"
                android:progress="3500"
                android:max="5000"
                android:paddingRight="12dp"
                android:paddingTop="3dp"
                android:layout_centerInParent="true" />


            <Button
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exit"
                android:layout_alignTop="@+id/progress"
                android:layout_marginTop="50dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


        <ImageButton
            android:id="@+id/bottomchoose"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/yasuo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"/>

</RelativeLayout>